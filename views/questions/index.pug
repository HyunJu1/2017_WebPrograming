extends ../layout

include ../includes/_paginate

block content
  .container  
    form.form-inline.search-input-group(action='/questions', method='GET')
      i.fa.fa-search
      input.form-control.mr-sm-2(type='text', name='term',
       placeholder='Search', aria-label='Search', value=term)

    h1.main-title 
      | Events
      
      
      if questions.total <= 0 
        .alert.alert-info No questions available yet
      else
        |
        .card-body
          .questions
            each question in questions.docs
              .question
                
                  .col-lg-4.col-sm-6.portfolio-item
                    .card.h-100
                      a(href='#')
                        img.card-img-top(src='images/vincent-guth-314896.jpg', alt='')
                      |                 
                      .card-body
                        p.card-text
                          .location= question.location
                        |                     
                        h6.card-title
                          a.title(href=`/questions/${question.id}`)= question.title
                          include _question
                        p.card-text
                          +paginate(questions, '/questions', {query: "???XXX&&"})
                    |   
          
                  //- img.card-img-top(src='images/vincent-guth-314896.jpg', alt='')
                  //- a.title(href=`/questions/${question.id}`)= question.title
                  //- include _question
                  //- p.card-text
                  //-   +paginate(questions, '/questions', {query: "???XXX&&"}) 

                
      a.btn.btn-primary(href='/questions/new') Register Events
                   
      
