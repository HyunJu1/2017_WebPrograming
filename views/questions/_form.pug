.form-group
  label(for="type") Type &nbsp;
  select#date-range.custom-select(name="type")
    option(selected="") 분야 선택
    option(value="Music") Music
    option(value="Food") Food and Drink
    option(value="Class") Class
    option(value="Arts") Arts
    option(value="Party") Party
    option(value="Sports") Sports and Wellness
    option(value="Networking")  Networking


.form-group
  label(for="location") Location
  input.form-control(type="text", name="location", placeholder="이벤트 위치를 입력하시오(필수)", value=question.location)
.form-group
  label(for="startTime") Start Time
  input.form-control(type="text", name="startTime", placeholder="이벤트의 시작시간을 입력하시오(필수)", value=question.startTime)
.form-group
  label(for="endTime") End Time
  input.form-control(type="text", name="endTime", placeholder="이벤트의 마감시간을 입력하시오(필수)", value=question.endTime)
.form-group
  label(for="RegisOrgan") 등록 조직
  input.form-control(type="text", name="RegisOrgan", placeholder="이벤트 등록 조직의 이름을 입력하시오(선택)", value=question.RegisOrgan)
.form-group
  label(for="RegisOrganCon") 등록 조직 설명
  textarea.form-control(name="RegisOrganCon", rows="3",placeholder="이벤트 등록 조직이 상세내용을 입력하시오(선택)")= question.RegisOrganCon
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=question.tags ? question.tags.join(" ") : "")
