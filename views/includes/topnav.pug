.header.clearfix
  nav.navbar.navbar-expand-md.navbar-light.bg-dark.fixed-top
    .container
      a.navbar-brand(href="/") HJ EentBrite
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="/events") Browse Events
          li.nav-item
            a.nav-link(href="/users") Users
          if (!currentUser) 
            li.nav-item
              a.nav-link(href='/signin') Signin
            li.nav-item
              a.nav-link(href='/users/new') Signup
            li.nav-item-B
              a.nav-link-B(href="/events/new") Create Events
          else
            li.nav-item
              a.nav-link(href=`/users/${currentUser._id}`) My Page
            li.nav-item
              a.nav-link(href='/signout') Signout
            li.nav-item-B
              a.nav-link-B(href="/events/new") Create Events
          
